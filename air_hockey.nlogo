breed [mallet] ;player's paddle
breed [cpu] ;cpu's paddle
breed [pucks puck] ; pucks
turtles-own [puck?]
globals [score1 score2] ;score of player, cpu

cpu-own [velx vely]


to hockeytable ;sets up the hockey table
  ask patches [set pcolor white] ;main "rink"
  ask patches with [abs pxcor = max-pxcor] [set pcolor 103] ;left and right edges
  ask patches with [abs pycor = max-pycor] [set pcolor 103] ;top and bottom edges
  ask patches [
    if (pxcor = 0) and (pcolor = white) [set pcolor gray] ;center line
    if (pycor >= -2) and (pycor <= 2) and (pxcor = -20) [set pcolor red] ;goal post
    if (pycor >= -2) and (pycor <= 2) and (pxcor = 20) [set pcolor red] ;goal post
    ]
end 

to bounce
  fd .1
  if ycor > 9.5 or ycor < -9.5 [rt 180 - 2 * heading] ;bounce of top and bottom
  if xcor > 19.5 or xcor < -19.5 [set heading (heading - 2 * heading)] ;bounce left and right walls
end

to necessities ;these are the settings of the puck, your mallet, and the opponent (cpu) mallet
  set-default-shape pucks "circle"
  set-default-shape mallet "mallet"
  set-default-shape cpu "mallet"
  create-mallet 1
  create-cpu 1
  ask pucks [
    set size 4]
    ;set velx random-float velocity - (.5 * velocity)
    ;set vely random-float velocity - (.5 * velocity)]
  ask mallet [
    set size 4
    setxy -16 0
    ]
  ask cpu [
    set size 4
    setxy 16 0
    ]
end

to score                                        ;the scoring system
    if puck? = true [                            ;makes sure that only the puck can change score
      if pcolor = 15 [                             ;if puck hits goal (red (15) area)
      ifelse xcor > 0 [set score1 score1 + 1
                       ask mallet [setxy -16 0]
                       ask cpu [setxy 16 0]
                       ask pucks [set color random 139 setxy 0 0]]
                      [set score2 score2 + 1
                       ask mallet [setxy -16 0]
                       ask cpu [setxy 16 0]
                       ask pucks [set color random 139 setxy 0 0]]]
                 ]
end

to reset
  if score1 = score1 + 1 [ask mallet [setxy -16 0]
                          ask cpu [setxy 16 0]
                          ask pucks [set color random 139 setxy 0 0]]
  if score2 = score2 + 1 [ask mallet [setxy -16 0]
                          ask cpu [setxy 16 0]
                          ask pucks [set color random 139 setxy 0 0]]
end

to mallet-control ;controls your mallet
  if mouse-inside? [ask mallet [setxy mouse-xcor mouse-ycor]]
end

to ai ;the cpu controlling
  ask cpu  [
              if xcor > 0 = true [ask cpu [set heading towards turtle 0
                                           fd .1]]]
end

to setup
  ca
  create-pucks 1 [set puck? true]
  necessities
  hockeytable
  set score1 0
  set score2 0
end

to go
  tick
  ask turtles [
    if puck? = true [bounce]
    mallet-control
    score
    ai
    ]
  
end


 


